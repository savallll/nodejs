<form method="POST" action="/create/add" >
    <div class="container mt-5">
        <div class="mb-3">
            <label for="name_id" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name_id" placeholder="name">
        </div>
        <div class="mb-3">
            <label for="des_id" class="form-label">Mô tả</label>
            <textarea class="form-control" name="des" id="des_id" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="img_id" class="form-label">Image</label>
            <input type="text" class="form-control" name="img" id="img_id" placeholder="img">
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit form</button>
        </div>
    </div>
</form>