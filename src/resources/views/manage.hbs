<div class="container mt-4 ">
  <h3>Manage</h3>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Mô tả</th>
        {{!-- <th scope="col">Thời gian update</th> --}}
        <th scope="col"></th>

      </tr>
    </thead>
    <tbody>
      {{#each CRUD}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.des}}</td>
        {{!-- <td>{{this.updatedAt}}</td> --}}
        <td class="">
          <a class="link-underline link-underline-opacity-0 me-3" href="/edit/{{this._id}}"
            style="cursor: pointer;">Sửa</a>
          <a class="link-underline link-underline-opacity-0 " data-bs-toggle="modal" data-bs-target="#delete_data"
            data-id="{{this._id}}" style="cursor: pointer;">Xóa</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


<form method="POST" id="delete-data-form" action=""></form>

{{!-- modal delete course --}}
<div class="modal" tabindex="-1" id="delete_data">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa data?</h5>
        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> --}}
      </div>
      <div class="modal-body">
        <p>Bạn muốn xóa data này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">hủy</button>
        <button type="button" id="btn-delete" class="btn btn-danger">Xóa</button>
      </div>
    </div>
  </div>
</div>

<script>
  var delete_data = document.getElementById('delete_data')
  var btndelete = document.getElementById('btn-delete')
  var deletedataform = document.forms['delete-data-form']
  var id
    delete_data.addEventListener('show.bs.modal', function(event){
      // Button that triggered the modal
      const button = event.relatedTarget
      // Extract info from data-bs-* attributes
      id = button.getAttribute('data-id')
      console.log(id)
    })
    btndelete.onclick = function(){
      deletedataform.action= '/data/' + id + '?_method=DELETE'
      deletedataform.submit()
    }

</script>














